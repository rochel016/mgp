<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="select_pmo_form_view" model="ir.ui.view">
        <field name="name">plainte.pmo.form.view</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
        <form edit="true" create="false" delete="false">
            <field name="user_pmo_name" invisible="1"/>
            <sheet>
                <!--Si user_pmo_id != None, alors la valeur du dropdown sera affichée avec le meme pmo en mode readonly -->
                <group>
                    <field name="user_pmo_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                       widget="many2one" string="Utilisateur PMO" attrs="{'readonly': [('user_pmo_name', '!=', '')]}"/>
                </group>
                <footer>
                    <!--RE-ASSIGNER LE TICKET AU MEME PMO-->
                    <button name="action_send_to_pmo" string="Re-assigner" type="object" default_focus="1" class="oe_highlight" 
                        attrs="{'invisible': [('user_pmo_name', '=', '')]}"/>

                    <!--ASSIGNER LE TICKET A UN PMO-->
                    <button name="action_send_to_pmo" string="Assigner" type="object" default_focus="1" class="oe_highlight" 
                        attrs="{'invisible': [('user_pmo_name', '!=', '')]}"/>

                    <button string="Annuler" class="oe_link" special="cancel" />
                </footer>
            </sheet>
        </form>
        </field>
    </record>

    <record id="select_pmo_action_window" model="ir.actions.act_window">
        <field name="name">Seléctionner un PMO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="select_pmo_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>