<odoo>
    <record id="custom_dashboard_form_view" model="ir.ui.view">
        <field name="name">custom.dashboard.form.view</field>
        <field name="model">mgp.custom_dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Nom du récapitulatif"/>
                    </group>
                    <group>
                        <field name="category" string="Catégorie"/>
                    </group>
                    <group>
                        <field name="description" string="Description"/>
                    </group>
                    <group>
                        <field name="color" string="Couleur" widget="color"/>
                    </group>
                     <group>
                        <field name="bgcolor" string="Couleur de kanban" widget="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="custom_dashboard_list_view" model="ir.ui.view">
        <field name="name">custom.dashboard.list.view</field>
        <field name="model">mgp.custom_dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category"/>
                <field name="description"/>
                <field name="color" widget="color"/>
                <field name="bgcolor" widget="color"/>
            </tree>
        </field>
    </record>

    <record id="custom_dashboard_action" model="ir.actions.act_window">
        <field name="name">Tableau de bord personnalisé</field>
        <field name="res_model">mgp.custom_dashboard</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>