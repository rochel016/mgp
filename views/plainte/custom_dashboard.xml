<odoo>
    <record id="custom_dashboard_form_view" model="ir.ui.view">
        <field name="name">custom.dashboard.form.view</field>
        <field name="model">mgp.custom_dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <label for="name" class="oe_edit_only" string="Nom du dashboard" />
                        <field name="name" />
                    </div>
                    <div>
                        <label for="category" class="oe_edit_only" string="Catégorie" />
                        <field name="category" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="custom_dashboard_list_view" model="ir.ui.view">
        <field name="name">custom.dashboard.list.view</field>
        <field name="model">mgp.custom_dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <record id="custom_dashboard_action" model="ir.actions.act_window">
        <field name="name">Tableau de bord personnalisé</field>
        <field name="res_model">mgp.custom_dashboard</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>