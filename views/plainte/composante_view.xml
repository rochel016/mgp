<odoo>

  <!-- explicit list view definition -->
  <record id="composante_list_view" model="ir.ui.view">
    <field name="name">composantes.list</field>
    <field name="model">mgp.plainte_composante</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="composante_form_view" model="ir.ui.view">
    <field name="name">composante.form.view</field>
    <field name="model">mgp.plainte_composante</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <label for="name" class="oe_edit_only" string="Nom de la composante" />
            <h1>
              <field name="name" />
            </h1>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <!-- server action to the one above -->
  <record model="ir.actions.act_window" id="composante_action_window">
    <field name="name">Composantes</field>
    <field name="res_model">mgp.plainte_composante</field>
    <field name="view_mode">tree,form</field>
  </record>

  
</odoo>
