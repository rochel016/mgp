<odoo>
    <!--PIVOT-->
    <record id="plainte_pmo_pivot_view_board" model="ir.ui.view">
        <field name="name">plainte.pivot.view</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
            <pivot string="Par Catégorie">
                <field name="statut" type="row"/>
                <field name="education_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="pmo_act_plainte_mgp_pivot" model="ir.actions.act_window">
        <field name="name">Plaintes des citoyens</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="mgp.plainte_pmo_pivot_view_board"/>
        <field name="domain">[('user_pmo_id', '=', env.uid), ('statut','in',['state_traitement_pmo', 'state_closed_prea'])]</field>
    </record>

    <!--GRAPH 1-->
    <record id="plainte_pmo_graph_view_board_1" model="ir.ui.view">
        <field name="name">plainte.graph.view</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
            <graph string="Par statut" type="bar">
                <field name="statut" type="row"/>
                <field name="categorie_id" type="col"/>
            </graph>
        </field>
    </record>

    <record id="pmo_act_plainte_mgp_graph_1" model="ir.actions.act_window">
        <field name="name">Plaintes des citoyens</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="mgp.plainte_pmo_graph_view_board_1"/>
        <field name="domain">[('user_pmo_id', '=', 'uid'), ('statut','in',['state_traitement_pmo', 'state_closed_prea'])]</field>
    </record>

    <!--GRAPH 2-->
    <record id="plainte_pmo_graph_view_board_2" model="ir.ui.view">
        <field name="name">plainte.graph.view</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
            <graph string="Par statut" type="pie">
                <field name="categorie_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="pmo_act_plainte_mgp_graph_2" model="ir.actions.act_window">
        <field name="name">Plaintes des citoyens</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="mgp.plainte_pmo_graph_view_board_2"/>
        <field name="domain">[('user_pmo_id', '=', 'uid'), ('statut','in',['state_traitement_pmo', 'state_closed_prea'])]</field>
    </record>

    <!--ACTIONS-->
    <record id="pmo_plainte_dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
            <form string="Dashboard">    
                <board style="1-2">
                    <column>
                        <action string="Plaintes - Catégorie" name="%(mgp.pmo_act_plainte_mgp_graph_2)d" />
                    </column>
                    <column>
                        <action string="Plaintes - En cours" name="%(mgp.pmo_act_plainte_mgp_graph_1)d" />
                        <action string="Plaintes - TCD" name="%(mgp.pmo_act_plainte_mgp_pivot)d" />
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="pmo_plainte_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="pmo_plainte_dashboard_form_view"/>
    </record>
</odoo>
