<odoo>

  <!-- explicit list view definition -->
  <record id="tranche_age_list_view" model="ir.ui.view">
    <field name="name">tranches.list</field>
    <field name="model">mgp.citoyen_tranche</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="tranche_age_form_view" model="ir.ui.view">
    <field name="name">tranche.form.view</field>
    <field name="model">mgp.citoyen_tranche</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <label for="name" class="oe_edit_only" string="Nom de la tranche d'âge" />
            <h1>
              <field name="name" />
            </h1>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <!-- server action to the one above -->
  <record model="ir.actions.act_window" id="tranche_action_window">
    <field name="name">Tranches d'âge</field>
    <field name="res_model">mgp.citoyen_tranche</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
