<odoo>

  <!-- explicit list view definition -->
  <record id="fokontany_list_view" model="ir.ui.view">
    <field name="name">fokontany list</field>
    <field name="model">mgp.loc_fokontany</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="commune_id"/>
      </tree>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="fokontany_form_view" model="ir.ui.view">
    <field name="name">fokontany.form.view</field>
    <field name="model">mgp.loc_fokontany</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="name" />
            <field name="commune_id"/>
          </group>  
        </group>
      </form>
    </field>
  </record>

  <!-- server action to the one above -->
  <record model="ir.actions.act_window" id="fokontany_action_window">
    <field name="name">Fokontany</field>
    <field name="res_model">mgp.loc_fokontany</field>
    <field name="view_mode">tree,form</field>
  </record>


</odoo>
