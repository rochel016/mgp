<odoo>

  <!-- explicit list view definition -->
  <record id="province_list_view" model="ir.ui.view">
    <field name="name">provinces.list</field>
    <field name="model">mgp.loc_province</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="description"/>
      </tree>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="province_form_view" model="ir.ui.view">
    <field name="name">province.form.view</field>
    <field name="model">mgp.loc_province</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="name" />
            <field name="description" />
          </group>  
        </group>
      </form>
    </field>
  </record>

  <!-- server action to the one above -->
  <record model="ir.actions.act_window" id="province_action_window">
    <field name="name">Provinces</field>
    <field name="res_model">mgp.loc_province</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
