<odoo>

  <!-- explicit list view definition -->
  <record id="commune_list_view" model="ir.ui.view">
    <field name="name">communes list</field>
    <field name="model">mgp.loc_commune</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="district_id"/>
        <field name="description"/>
      </tree>
    </field>
  </record>

  <!-- actions opening views on models -->
  <record id="commune_form_view" model="ir.ui.view">
    <field name="name">commune.form.view</field>
    <field name="model">mgp.loc_commune</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="name" />
            <field name="district_id"/>
            <field name="description" />
          </group>  
        </group>
      </form>
    </field>
  </record>

  <!-- server action to the one above -->
  <record model="ir.actions.act_window" id="commune_action_window">
    <field name="name">Communes</field>
    <field name="res_model">mgp.loc_commune</field>
    <field name="view_mode">tree,form</field>
  </record>


</odoo>
