<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mgp_email_template" model="mail.template">
          <field name="name">MGP e-mail template</field>
          <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
          <field name="subject">Plainte ${object.reference}</field>
          <field name="email_to">${object.email|safe}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="base.model_res_partner"/>
          <field name="auto_delete" eval="True"/>
          <field name="body_html">
              <![CDATA[
                <p>Bonjour,<p/>
                <p>Vous avez ${ctx['ticket_count']} ticket(s) à traiter:</p>
                
                <p>${ctx['ticket_items']}</p>
                
                <p>Cordialement,</p>
                <span style='color:#4C4C4C'>___________________________________</span>
                <strong>M</strong>écanisme de <strong>G</strong>estion de <strong>P</strong>laintes
                <strong>${ctx['company_name']}</strong>
              ]]>
          </field>
       </record>
    </data>
</odoo>