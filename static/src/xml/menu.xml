    <menuitem
        id="menu_dashboard_prea"
        name="Tableaux de bord"
        parent="root_menu"
        action="prea_plainte_dashboard"
        sequence="10"
        groups="mgp.mgp_gouvernance_prea"/> 
    
    <!--PMO-->
    <menuitem
        id="menu_dashboard_pmo"
        name="Tableaux de bord"
        parent="root_menu"
        action="pmo_plainte_dashboard"
        sequence="11" 
        groups="mgp.mgp_gouvernance_pmo"/> 
