<odoo>
    <data noupdate="1">
       <!-- Create link to the language with name "lang_pl" in ir.model.data -->
       <record id="mgp_lang_mg" model="ir.model.data">
            <field name="name">lang_pl</field>
            <field name="noupdate">TRUE</field>
            <field name="module">mgp</field>
            <field name="model">res.lang</field>
            <field name="res_id" model="res.lang" search="[('iso_code', '=', 'mg_MG')]"/>
       </record>
        <!-- Access link by name "lang_mg" -->
        <record id="lang_mg" model="res.lang">
            <field name="grouping">[3,0]</field>
            <field name="decimal_point">,</field>
            <field name="thousands_sep"> </field>
        </record>
    </data>
</odoo>