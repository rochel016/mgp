<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        
        <!--SEND MAIL TO USERS PREA EVERY DAY-->
        <record id="send_email_to_prea" model="ir.cron">
            <field name="name">Send email to prea users</field>
            <field name="model_id" ref="model_mgp_plainte"/>
            <field name="type">ir.actions.server</field>
            <field name="code">model.send_email_prea_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <!--SEND MAIL TO USERS PMO EVERY WEEK-->
        <record id="send_email_to_pmo" model="ir.cron">
            <field name="name">Send email to pmo users</field>
            <field name="model_id" ref="model_mgp_plainte"/>
            <field name="type">ir.actions.server</field>
            <field name="code">model.send_email_pmo_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
        </record>
        
    </data>
</odoo>
